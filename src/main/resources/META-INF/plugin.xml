<idea-plugin>
    <id>gl.ro.guess-idea</id>
    <name>Guess Idea</name>
    <vendor email="i@ro.gl" url="https://github.com/zored/guess-idea">zored</vendor>

    <description><![CDATA[
This IDEA plugin autocompletes names used in project.
- Of values based on type.
- Of type based on value name.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <!-- Requires the Go plugin -->
    <depends>org.jetbrains.plugins.go</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileBasedIndex implementation="gl.ro.guess_idea.index.ValueByTypeIndexExtension"/>
        <completion.contributor implementationClass="gl.ro.guess_idea.completion.ValueCompletionContributor"
                                language="any" order="first"/>
    </extensions>
</idea-plugin>